
<h1>Add User</h1>

<form method="post">
    <p class="error" style="color: red;">
        @ViewBag.error
    </p>

    <div class="form-group">
        <label>Username
            <input class="form-control" type="text" name="username" value="@ViewBag.username" />
        </label>
    </div>

    <div class="form-group">
        <label>Email
            <input class="form-control" type="text" name="email" value="@ViewBag.email" />
        </label>
    </div>

    <div class="form-group">
        <label>Password
            <input class="form-control" type="password" name="password" />
        </label>
    </div>

    <div class="form-group">
        <label>Verify
            <input class="form-control" type="password" name="verify" />
        </label>
    </div>

    <input type="submit" value="Sign up!" />

</form>
